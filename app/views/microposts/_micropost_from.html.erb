<%= form_with model: @micropost, local: true do |f| %>
  <%= render 'layputs/error_messages', object: f.object %>
  <div class = 'form-group'>
    <%= f.label :name %>　<span class="input-need">※必須</span>
    <%= f.text_field :name, class: 'form-control', id: 'micropost_name' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :team %> [分量]　<span class="input-unneed">※任意</span>
    <%= f.text_field :portion, class: 'form-control', id: 'micropost_team' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :wind %>　<span class="input-unneed">※任意</span>
    <%= f.text_field :tips, size: "30x4", class: 'form-control', id: 'micropost_wind' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :description %>　<span class="input-unneed">※任意</span>
    <%= f.text_field :description, size: "60x4", class: 'form-control', id: 'micropost_description' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :time %> [分量]　<span class="input-unneed">※任意</span>
    <%= f.text_field :portion, class: 'form-control', id: 'micropost_time' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :maintenance %>　<span class="input-unneed">※任意</span>
    <%= f.text_field :tips, size: "30x4", class: 'form-control', id: 'micropost_maintenance' %>
  </div>
  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>