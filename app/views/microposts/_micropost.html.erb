<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="name"><%= link_to micropost.name, micropost_path(micropost) %></span>
  <span class="team"><%= micropost.team %></span><br>
  <span class="wind">風: <%= micropost.wind %></span><br>
  <span class="description">内容（練習メニューなど）: <%= micropost.description %></span><br>
  <span class="time">練習<%= micropost.time %>時間　</span><br>
  <span class="maintenance">整備箇所: <%= micropost.maintenance %></span><br>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %>前に投稿
  </span>
</li>